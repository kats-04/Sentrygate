{
  "name": "sentrygate",
  "version": "1.0.0",
  "description": "SentryGate - Verified access. Visible actions. Professional user identity and access management platform.",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=client\" \"npm run dev --workspace=server\"",
    "build": "npm run build --workspaces",
    "start": "npm start --workspace=server",
    "client": "npm run dev --workspace=client",
    "server": "npm run dev --workspace=server",
    "lint": "npm run lint --workspaces",
    "format": "npm run format --workspaces",
    "format:check": "npm run format:check --workspaces"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}