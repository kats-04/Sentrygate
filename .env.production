# Production Environment Variables
NODE_ENV=production
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/user_dashboard_prod
MONGODB_TEST_URI=mongodb://localhost:27017/user_dashboard_test

# JWT
JWT_SECRET=your-super-secure-jwt-secret-here-change-in-production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-here
JWT_REFRESH_EXPIRE=30d

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
APP_NAME=User Dashboard
CLIENT_ORIGIN=https://yourdomain.com

# Push Notifications (VAPID)
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_EMAIL=mailto:your-email@example.com

# File Upload
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-here
CORS_ORIGIN=https://yourdomain.com

# Monitoring & Logging
SENTRY_DSN=your-sentry-dsn-here
LOG_LEVEL=info

# Cache Settings
CACHE_TTL=300
CACHE_CHECK_PERIOD=60

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Webhook Settings
WEBHOOK_TIMEOUT=10000
WEBHOOK_MAX_RETRIES=3

# Analytics
ANALYTICS_RETENTION_DAYS=90
