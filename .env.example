# ==========================================
# APPLICATION CONFIGURATION
# ==========================================

# Environment
NODE_ENV=production
PORT=5000

# ==========================================
# DATABASE
# ==========================================

# MongoDB connection string (Atlas or Local)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/user_dashboard?retryWrites=true&w=majority

# ==========================================
# AUTHENTICATION & SECURITY
# ==========================================

# JWT secret (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
JWT_SECRET=your-secret-key-here

# Two-factor authentication
GOOGLE_AUTHENTICATOR_ENABLED=true

# ==========================================
# EMAIL CONFIGURATION
# ==========================================

# SMTP Configuration (Gmail, SendGrid, or other SMTP provider)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password

# Email settings
APP_NAME=User Dashboard
EMAIL_FROM=noreply@userdashboard.com

# ==========================================
# PUSH NOTIFICATIONS
# ==========================================

# Web Push VAPID Keys (generate with: npx web-push generate-vapid-keys)
VAPID_PUBLIC_KEY=your-public-key
VAPID_PRIVATE_KEY=your-private-key

# ==========================================
# ERROR TRACKING & MONITORING
# ==========================================

# Sentry (error tracking and performance monitoring)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production

# ==========================================
# CORS & CLIENT CONFIGURATION
# ==========================================

# Client origin for CORS
CLIENT_ORIGIN=https://yourdomain.com

# ==========================================
# RATE LIMITING
# ==========================================

# Rate limiter settings (values in milliseconds and requests per window)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=8

# ==========================================
# SESSION MANAGEMENT
# ==========================================

# Session timeout (in milliseconds)
SESSION_TIMEOUT=900000

# Force secure cookies (set to 'true' in production)
FORCE_SECURE=true

# ==========================================
# OPTIONAL: AWS S3 (for file uploads)
# ==========================================

# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_BUCKET_NAME=your-bucket-name
# AWS_REGION=us-east-1

# ==========================================
# OPTIONAL: LOGGING
# ==========================================

# Log level: error, warn, info, debug, trace
LOG_LEVEL=info

# Send logs to external service
# LOGS_SERVICE_KEY=your-key

# ==========================================
# OPTIONAL: FEATURE FLAGS
# ==========================================

# Enable/disable features
FEATURE_2FA=true
FEATURE_WEBHOOKS=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_DATA_EXPORT=true

# ==========================================
# INTERNAL CONFIGURATION
# ==========================================

# Max file upload size (in bytes, default 5MB)
MAX_FILE_SIZE=5242880

# Max concurrent connections
MAX_CONNECTIONS=1000

# ==========================================
# SECURITY HEADERS
# ==========================================

# Content Security Policy
CSP_ENABLED=true

# HSTS (HTTP Strict Transport Security)
HSTS_ENABLED=true
HSTS_MAX_AGE=31536000

# ==========================================
# PERFORMANCE
# ==========================================

# Enable response compression
COMPRESSION_ENABLED=true

# Cache TTL (in seconds)
CACHE_TTL=3600
